# Django Environment Variables for Production
# Copy this file to backend/.env and fill in the actual values
# DO NOT commit the .env file to Git!

# ============================================
# Django Core Settings
# ============================================

# Generate a new secret key for production
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - comma-separated list of domains/IPs
ALLOWED_HOSTS=18.217.70.110,zohaib.no,www.zohaib.no,localhost,127.0.0.1

# ============================================
# CORS Settings
# ============================================

# Allowed CORS origins - where frontend requests come from
CORS_ALLOWED_ORIGINS=http://18.217.70.110,http://zohaib.no,http://www.zohaib.no

# For testing, you can temporarily allow all origins (NOT for production!)
# CORS_ALLOW_ALL_ORIGINS=False

# ============================================
# External API Keys
# ============================================

# Statens Vegvesen API Key for vehicle lookup
# Get your API key from: https://www.vegvesen.no/
STATENS_VEGVESEN_API_KEY=your-api-key-here

# ============================================
# Security Settings (Production)
# ============================================

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://18.217.70.110,http://zohaib.no,http://www.zohaib.no

# For HTTPS (when you add SSL), uncomment these:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================
# Database (Optional - for PostgreSQL)
# ============================================

# Leave empty to use SQLite (default)
# For PostgreSQL, use format:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ============================================
# Email Settings (Optional)
# ============================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# Media Files (Optional)
# ============================================

# If you have user-uploaded files
# MEDIA_URL=/media/
# MEDIA_ROOT=/home/deploy/shadcoding-task1/backend/media

# ============================================
# Logging (Optional)
# ============================================

# LOG_LEVEL=INFO

# ============================================
# Notes
# ============================================

# After editing this file:
# 1. Copy to backend/.env: cp deployment/.env.example backend/.env
# 2. Edit backend/.env with your actual values
# 3. Make sure .env is in .gitignore
# 4. Restart services: sudo systemctl restart gunicorn nginx
